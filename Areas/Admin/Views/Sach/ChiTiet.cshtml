@model SachOnline.Models.SACH

@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div>
    <h2 style="text-align:center">CHI TIẾT SÁCH</h2>
    <hr />
    <dl class="dl-horizontal center-block" style="text-align: left">
        <dt >
            Tên sách:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt>
            Chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHUDE.TenChuDe)
        </dd>

        <dt>
            Nhà xuất bản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NHAXUATBAN.TenNXB)
        </dd>


        <dt>
            Giá bán:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GiaBan)
        </dd>

        <dt>
            Mô tả:
        </dt>
        <dd>
            @Html.Raw(@Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp"));
        </dd>

        <dt>
            Ảnh bìa:
        </dt>
        <dd>
            <img src="~/Images/@Model.AnhBia" style="width:300px; height:375px; margin-bottom:20px;"/>
        </dd>

        <dt>
            Ngày cập nhât:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

        <dt>
            Số lượng bán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongBan)
        </dd>

    </dl>
</div>
<p style="text-align:center">
    <a href="@Url.Action("Sua", "Sach", new {id = Model.MaSach })" class="btn btn-warning" role="button">Sửa</a>
    <a href="@Url.Action("Index", "Sach")" class="btn btn-warning" role="button">Quay về trang chủ</a>
</p>

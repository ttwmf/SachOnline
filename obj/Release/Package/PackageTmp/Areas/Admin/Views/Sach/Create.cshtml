@model SachOnline.Models.SACH

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 style="text-align:center">THEM SACH</h2>
@using (Html.BeginForm("Create", "Sach", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <lable class="control-label col-md-2">Tên sách</lable>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenSach" value="@ViewBag.TenSach" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Mô tả</lable>
            <div class="col-md-10">
                <textarea name="sMota">@ViewBag.MoTa</textarea>
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Ảnh bìa</lable>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Ngày cập nhất</lable>
            <div class="col-md-10">
                <input type="date" name="dNgayCapNhat" required />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Số lượng</lable>
            <div class="col-md-10">
                <input type="number" min="1" required name="iSoLuong" value="@ViewBag.SoLuong" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Giá bán</lable>
            <div class="col-md-10">
                <input type="number" min="1" required name="mGiaBan" value="@ViewBag.GiaBan" />
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Chủ đề</lable>
            <div class="col-md-10">
                @Html.DropDownList("MaCD")
            </div>
        </div>

        <div class="form-group">
            <lable class="control-label col-md-2">Nhà xuất bản</lable>
            <div class="col-md-10">
                @Html.DropDownList("MaNXB")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-warning" />
                <a href="@Url.Action("Index", "Sach")" class="btn btn-warning" role="button">Quay về trang chủ</a>
            </div>
        </div>
    </div>
}
